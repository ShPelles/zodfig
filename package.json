{
  "name": "zodfig",
  "version": "0.0.1",
  "description": "Type-safe, hierarchical, modular config handling with Zod",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier . --write",
    "format-check": "prettier . --check",
    "lint": "eslint src/** test/** --fix",
    "lint-check": "eslint src/** test/**",
    "test": "vitest",
    "coverage": "vitest run --coverage"
